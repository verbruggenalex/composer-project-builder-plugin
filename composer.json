{
    "name": "verbruggenalex/composer-project-builder-plugin",
    "description": "This composer plugin allows you build your project in different locations.",
    "type": "composer-plugin",
    "authors": [
        {"name": "Verbruggen Alexander", "email": "verbruggenalex@gmail.com"}
    ],
    "support": {
        "issues": "https://github.com/verbruggenalex/composer-project-builder-plugin/issues"
    },
    "suggest": {
        "composer/installers": "Allows project to use installer-paths on post installation for project structure",
        "cweagans/composer-patches": "Applies patches to your packages"
    },
    "conflict": {
        "letudiant/composer-shared-package-plugin": "*"
    },
    "require": {
        "php": ">=5.3.2",
        "composer-plugin-api": "~1.0",
        "composer/installers": "~1.0"
    },
    "autoload": {
        "psr-0": {
            "VerbruggenAlex\\Composer\\": "src/"
        }
    },
    "extra": {
        "class": "VerbruggenAlex\\Composer\\ProjectBuilderPlugin"
    }
}
